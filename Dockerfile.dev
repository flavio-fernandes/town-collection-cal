FROM python:3.11-slim-bookworm

ARG GIT_COMMIT

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    GIT_COMMIT=$GIT_COMMIT

WORKDIR /app

COPY pyproject.toml README.md /app/
COPY src /app/src
COPY towns /app/towns
COPY scripts /app/scripts

RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential g++ python3-dev \
    && rm -rf /var/lib/apt/lists/* \
    && pip install --no-cache-dir --upgrade pip==26.0.1 wheel==0.46.2 \
    && pip install --no-cache-dir -e ".[dev,address]"

ENV FLASK_APP=town_collection_cal.service.app:create_app \
    FLASK_ENV=development

EXPOSE 5000

CMD ["python", "-m", "flask", "run", "--host", "0.0.0.0", "--port", "5000"]
